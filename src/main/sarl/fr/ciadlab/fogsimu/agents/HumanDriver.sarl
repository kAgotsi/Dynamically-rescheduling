package fr.ciadlab.fogsimu.agents

import io.sarl.core.Initialize
import org.arakhne.afc.simulation.framework.framework1d.agents.AbstractSimulatedAgent1d
import io.sarl.core.Behaviors
import fr.ciadlab.fogsimu.behaviors.Driver

/**
 * The agent that supports the driver behavior.
 *
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
agent HumanDriver extends AbstractSimulatedAgent1d {

	uses Behaviors

	override overridableInitializationStage(it : Initialize) : void {
		super.overridableInitializationStage(it)
		new Driver(this).registerBehavior(it.parameters)
	}

}
