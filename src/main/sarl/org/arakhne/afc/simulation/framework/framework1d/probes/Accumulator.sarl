package org.arakhne.afc.simulation.framework.framework1d.probes

/**
 * Accumulator.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
class Accumulator {

	var doubleValue = 0.0

	var count = 0
	

	def increment(value : double) : void {
		this.doubleValue += value
		this.count ++
	}

	def getValue : double {
		this.doubleValue
	}

	def getCount : int {
		this.count
	}
	
	def toString : String {
		Double::toString(getValue)
	}

}
